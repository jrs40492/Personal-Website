extends layout.pug

block content
  #introduction.section.color-bg(data-page="home")
    include navigation.pug

    #about.intro-row
      h1= `Hello, I'm ${settings.name}`
      h3= `${settings.motto}`
    #links.intro-row
      a.button(href=`/images/resume.pdf`, role="button", target="_blank") Resum√©
      if settings.github
        a.icon(href=`${settings.github}`,target="_blank",alt="GitHub",rel="noreferrer",title="GitHub")
          i.fab.fa-github-square.fa-3x
      if settings.gitlab
        a.icon(href=`${settings.gitlab}`,target="_blank",alt="GitLab",rel="noreferrer",title="GitLab")
          i.fab.fa-gitlab.fa-3x
      if settings.stackoverflow
        a.icon(href=`${settings.stackoverflow}`,target="_blank",alt="Stack Overflow",rel="noreferrer",title="Stack Overflow")
          i.fab.fa-stack-overflow.fa-3x
      if settings.linkedin
        a.icon(href=`${settings.linkedin}`,target="_blank",alt="LinkedIn",rel="noreferrer",title="LinkedIn")
          i.fab.fa-linkedin.fa-3x
