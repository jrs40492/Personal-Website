#introduction.section
  #about.intro-row
    h1 Hello, I'm #{dev_name}
    h3 #{tag_line}
  #links.intro-row
    a.button(href=`/resume`, role="button") Resum√©
    if twitter_url
      a.icon(href=`https://${twitter_url}`, target="_blank")
        i.fab.fa-twitter-square.fa-3x
    if github_url
      a.icon(href=`https://${github_url}`, target="_blank")
        i.fab.fa-github-square.fa-3x
  #navigation.intro-row
    .button.scroll-btn(data-id="tech") Tech <i class="fas fa-angle-down"></i>
    .button.scroll-btn(data-id="portfolio") Portfolio <i class="fas fa-angle-down"></i>
